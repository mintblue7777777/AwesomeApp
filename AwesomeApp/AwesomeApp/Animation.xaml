<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Appearing="ContentPage_Appearing"
    x:Class="AwesomeApp.Animation"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="0,3" HorizontalOptions="Start">
                <Label Text="Default" />
                <Label
                    FontSize="45"
                    Rotation="45"
                    RotationX="-45"
                    RotationY="70"
                    Text="Rotation" />
            </StackLayout>
            <StackLayout Padding="0,30" HorizontalOptions="Start">
                <Label Text="Default" />
                <Label
                    AnchorX="0.5"
                    AnchorY="0"
                    Scale="3"
                    Text="Scale" />
            </StackLayout>
            <Grid Padding="0,30">
                <Label Text="Default" />
                <Label
                    Text="Translation"
                    TranslationX="100"
                    TranslationY="100" />
            </Grid>
            <Label x:Name="labelAnimation" Text="Animation"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>